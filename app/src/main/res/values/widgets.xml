<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.OutLineTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="android:textAppearance">@style/TextNormal</item>
    </style>


    <style name="Widget.OutLinePasswordInputLayout" parent="Widget.OutLineTextInputLayout">
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="Widget.AddressInputLayout" parent="Widget.OutLineTextInputLayout">
        <item name="android:maxLength">80</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.EmailInputLayout" parent="Widget.OutLineTextInputLayout">
        <item name="android:maxLines">50</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.PhoneInputLayout" parent="Widget.OutLineTextInputLayout">
        <item name="android:maxLength">12</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.EditTextPassword" parent="Widget.EditText">
        <item name="android:inputType">textPassword</item>
    </style>


    <style name="Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextSmall</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">8dp</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearance</item>
    </style>

    <style name="ButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="FloatButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/radius_diamond_button</item>
    </style>

    <style name="Widget.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:radius">4dp</item>
    </style>

    <style name="MyModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MyModalBottomSheet</item>
    </style>
</resources>