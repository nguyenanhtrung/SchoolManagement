<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_error_state"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:srcCompat="@drawable/undraw_server_down_s4lk" />

    <TextView
        android:id="@+id/title_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal_100"
        android:text="@string/title_error_state"
        android:textAppearance="@style/TitleBig"
        app:layout_constraintEnd_toEndOf="@+id/image_error_state"
        app:layout_constraintStart_toStartOf="@+id/image_error_state"
        app:layout_constraintTop_toBottomOf="@+id/image_error_state" />

    <TextView
        android:id="@+id/text_error_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal_100"
        android:layout_marginTop="@dimen/margin_small_100"
        android:layout_marginEnd="@dimen/margin_normal_100"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_error"
        tools:text="Network Connection not detected.Please try again dasdad sdasd  sdasdad ad ad as" />

    <Button
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal_150"
        android:text="@string/retry"
        app:layout_constraintEnd_toEndOf="@+id/text_error_content"
        app:layout_constraintStart_toStartOf="@+id/text_error_content"
        app:layout_constraintTop_toBottomOf="@+id/text_error_content" />
</androidx.constraintlayout.widget.ConstraintLayout>