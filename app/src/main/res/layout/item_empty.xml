<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_empty_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/margin_normal_200"
        app:srcCompat="@drawable/image_empty_view" />

    <TextView
        android:id="@+id/title_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_normal_150"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TitleBig"
        tools:text="Danh sách tài khoản trống" />

    <TextView
        android:id="@+id/text_empty_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small_100"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextNormal"
        tools:text='Nhấn nút "+" phía dưới để tạo mới tài khoản' />
</LinearLayout>