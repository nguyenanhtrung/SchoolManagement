<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foregroundTint="@color/colorSurface"
    app:cardElevation="@dimen/elevation_search_view">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/edit_text_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigh_search_bar"
        app:searchIcon="@drawable/ic_search_black"
        app:closeIcon="@drawable/ic_clear"
        app:defaultQueryHint="@string/title_search"
        android:background="@android:color/transparent"
        android:iconifiedByDefault="false"
        android:inputType="text"
        />


</com.google.android.material.card.MaterialCardView>