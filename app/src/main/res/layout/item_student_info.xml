<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_normal_100"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foregroundTint="@color/colorSurface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_normal_100"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image_student"
            android:layout_width="@dimen/width_image_square"
            android:layout_height="@dimen/height_image_square"
            app:cardCornerRadius="@dimen/card_radius">

            <ImageView
                android:id="@+id/image_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleNormal"
            tools:text="@tools:sample/full_names"
            android:layout_toEndOf="@id/card_image_student"
            android:layout_marginStart="@dimen/margin_normal_100" />

        <TextView
            android:id="@+id/text_student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13212312312"
            android:layout_marginTop="@dimen/margin_small_100"
            android:layout_alignStart="@id/text_student_name"
            android:layout_below="@id/text_student_name"
            android:layout_toEndOf="@id/card_image_student"
            style="@style/TextNormal"
            />

        <TextView
            android:id="@+id/text_student_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PM.06"
            android:layout_marginTop="@dimen/margin_small_100"

            android:layout_alignStart="@id/text_student_id"
            android:layout_below="@id/text_student_id"
            android:layout_toEndOf="@id/card_image_student"
            style="@style/TextNormal"
            />
    </RelativeLayout>





</com.google.android.material.card.MaterialCardView>